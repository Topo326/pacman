<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PacmanGame.ViewModels"
             x:Class="PacmanGame.Views.PacmanGameView"
             x:DataType="vm:PacmanGameViewModel" 
             Focusable="True">

    <UserControl.Styles>
        <Style Selector="Button.HudBtn">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Estilos para las paredes con efecto de neón azul -->
        <Style Selector="Rectangle.Wall">
            <Setter Property="Fill" Value="#2121DE"/>
            <Setter Property="Stroke" Value="#4747FF"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="RadiusX" Value="4"/>
            <Setter Property="RadiusY" Value="4"/>
        </Style>
        
        <!-- Estilo para los puntos normales -->
        <Style Selector="Ellipse.Dot">
            <Setter Property="Fill" Value="#FFB8AE"/>
        </Style>

        <!-- Estilo para las súper píldoras con animación de parpadeo -->
        <Style Selector="Ellipse.PowerPill">
            <Setter Property="Fill" Value="#FFB8AE"/>
            <Style.Animations>
                <Animation Duration="0:0:0.5" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="Opacity" Value="1.0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.0"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.0"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.25">
                        <Setter Property="Opacity" Value="0.4"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.2"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.2"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.5">
                        <Setter Property="Opacity" Value="1.0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.0"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Animación de muerte -->
        <Style Selector="Image.dead">
            <Setter Property="RotateTransform.Angle" Value="720" />
            <Setter Property="ScaleTransform.ScaleX" Value="0"/>
            <Setter Property="ScaleTransform.ScaleY" Value="0"/>
            <Setter Property="Opacity" Value="0"/>
            <Style.Animations>
                <Animation Duration="0:0:1.5">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="RotateTransform.Angle" Value="0" />
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5">
                        <Setter Property="RotateTransform.Angle" Value="720" />
                        <Setter Property="ScaleTransform.ScaleX" Value="0"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0"/>
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Texto de HUD -->
        <Style Selector="TextBlock.HUD">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Courier New"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto, *">
        <Border Grid.Row="0" Background="Black" BorderBrush="#2121DE" BorderThickness="0,0,0,2" Padding="10">
            <DockPanel LastChildFill="False">
                <TextBlock Text="{Binding Score, StringFormat='SCORE: {0}'}" Classes="HUD" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                <TextBlock Text="{Binding HighScore, StringFormat='HIGH SCORE: {0}'}" Classes="HUD" VerticalAlignment="Center" Foreground="Yellow" DockPanel.Dock="Left" Margin="40,0,0,0"/>
                
                <Button Content="MUTE" Command="{Binding ToggleMuteCommand}" Classes="HudBtn" DockPanel.Dock="Right"/>
                <Button Content="PAUSE" Command="{Binding TogglePauseCommand}" Classes="HudBtn" DockPanel.Dock="Right"/>
                <TextBlock Text="{Binding Lives, StringFormat='LIVES: {0}'}" Classes="HUD" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="0,0,20,0"/>
            </DockPanel>
        </Border>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <Canvas Width="728" Height="780" Background="Black">
                
                <ItemsControl ItemsSource="{Binding GameEntities}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Width="728" Height="780" Background="Transparent"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.Styles>
                        <Style Selector="ContentPresenter" x:DataType="vm:EntityViewModel">
                            <Setter Property="Canvas.Left" Value="{Binding X}"/>
                            <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                        </Style>
                    </ItemsControl.Styles>
                    
                    <ItemsControl.DataTemplates>
                        <!-- Template para Puntos Normales -->
                        <DataTemplate DataType="{x:Type vm:DotViewModel}">
                            <Ellipse Width="6" Height="6" Classes="Dot"/>
                        </DataTemplate>
                        
                        <!-- Template para Súper Píldoras -->
                        <DataTemplate DataType="{x:Type vm:PowerPillViewModel}">
                            <Ellipse Width="16" Height="16" Classes="PowerPill" RenderTransformOrigin="50%,50%">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </DataTemplate>
                        
                        <!-- Template para Paredes -->
                        <DataTemplate DataType="{x:Type vm:WallViewModel}">
                            <Rectangle Width="26" Height="26" Classes="Wall"/>
                        </DataTemplate>

                        <!-- Template para Pacman -->
                        <DataTemplate DataType="{x:Type vm:PlayerEntityViewModel}">
                            <Image Width="40" Height="40" Margin="-5,-5,0,0" Stretch="Fill" Source="{Binding Sprite}" Classes.dead="{Binding IsDead}">
                                <!-- La clase dead lanzará la animación. Al quitar la clase, volverá al estado natural -->
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1" ScaleY="1" />
                                        <RotateTransform Angle="0" />
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>
                        </DataTemplate>

                        <!-- Template para Fantasmas -->
                        <DataTemplate DataType="{x:Type vm:GhostEntityViewModel}">
                            <Image Width="26" Height="26" Source="{Binding Sprite}">
                                <Image.Transitions>
                                    <Transitions>
                                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                                    </Transitions>
                                </Image.Transitions>
                            </Image>
                        </DataTemplate>

                        <!-- Template para Frutas Especiales / Pickups -->
                        <DataTemplate DataType="{x:Type vm:PickupEntityViewModel}">
                            <Image Width="26" Height="26" Source="{Binding Sprite}" Stretch="Fill" />
                        </DataTemplate>
                    </ItemsControl.DataTemplates>
                </ItemsControl>
            </Canvas>
        </Viewbox>

        <!-- Overlay de Pausa -->
        <Grid Grid.Row="1" Background="#B3000000" IsVisible="{Binding IsPaused}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
                <TextBlock Text="JUEGO PAUSADO" 
                           Foreground="Yellow" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                
                <Button Content="REANUDAR" 
                        Command="{Binding TogglePauseCommand}" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        FontSize="24"/>
                        
                <Button Content="SALIR DE LA PARTIDA" 
                        Command="{Binding ExitGameCommand}" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        FontSize="24"/>
            </StackPanel>
        </Grid>

        <!-- Overlay de Game Over -->
        <Grid Grid.Row="1" Background="#E6000000" IsVisible="{Binding IsGameOver}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="30">
                <TextBlock Text="GAME OVER" 
                           Foreground="Red" 
                           FontSize="64" 
                           FontWeight="Black" 
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="{Binding Score, StringFormat='FINAL SCORE: {0}'}" 
                           Foreground="Yellow" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                
                <Button Content="VOLVER A JUGAR" 
                        Command="{Binding RestartGameCommand}" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        FontSize="24"
                        Margin="0,20,0,0"/>
                        
                <Button Content="SALIR AL MENÚ" 
                        Command="{Binding ExitGameCommand}" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        FontSize="24"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
