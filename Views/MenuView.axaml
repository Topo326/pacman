<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PacmanGame.ViewModels"
             x:DataType="vm:MenuViewModel"
             x:Class="PacmanGame.Views.MenuView">
    
    <StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="PAC-MAN" 
                   FontSize="40" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center" 
                   Foreground="Yellow"/>
        
        <Button Content="START GAME" 
                Command="{Binding StartGameCommand}" 
                HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Center"/>
                
        <Button Content="HIGH SCORES" 
                Command="{Binding ShowHighScoresCommand}" 
                HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Center"/>
                
        <Button Content="EXIT" 
                Command="{Binding ExitCommand}" 
                HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Center"/>
                
        <ToggleButton Content="MUTE" 
                      IsChecked="{Binding IsMuted}"
                      Command="{Binding ToggleMuteCommand}" 
                      HorizontalAlignment="Stretch" 
                      HorizontalContentAlignment="Center"/>
    </StackPanel>
</UserControl>
